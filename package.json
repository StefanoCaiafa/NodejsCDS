{
  "name": "codigodelsur-backend",
  "version": "1.0.0",
  "description": "Node.js + Express + TypeScript + SQLite Backend API with JWT Authentication",
  "main": "dist/index.js",
  "scripts": {
    "start": "npm run migration:run && node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc && npm run copy-files",
    "copy-files": "node -e \"const fs = require('fs'); const path = require('path'); if (fs.existsSync('data')) { const dest = 'dist/data'; fs.mkdirSync(dest, { recursive: true }); fs.readdirSync('data').forEach(file => fs.copyFileSync(path.join('data', file), path.join(dest, file))); }\"",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "migration:create": "typeorm migration:create",
    "migration:run": "typeorm migration:run -d dist/db/data-source.js",
    "migration:revert": "typeorm migration:revert -d dist/db/data-source.js"
  },
  "keywords": [
    "nodejs",
    "express",
    "typescript",
    "sqlite",
    "jwt",
    "swagger",
    "docker"
  ],
  "author": "Stefano Caiafa",
  "license": "MIT",
  "dependencies": {
    "@types/node-cron": "^3.0.11",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^4.2.1",
    "reflect-metadata": "^0.2.2",
    "sqlite3": "^5.1.7",
    "swagger-jsdoc": "^3.7.0",
    "swagger-ui-express": "^5.0.0",
    "typeorm": "^0.3.27",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^18.19.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
